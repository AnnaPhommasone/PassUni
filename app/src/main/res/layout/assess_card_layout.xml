<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardBackgroundColor="#00BCD4"
    card_view:cardCornerRadius="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp" >

        <TextView
            android:id="@+id/tv_assessment_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_below="@+id/tv_assessment_name"
            android:layout_alignParentStart="true"
            android:text="@string/value"/>

        <TextView
            android:id="@+id/tv_assessment_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_value"
            android:layout_alignParentStart="true"
            android:textColor="#000000"
            android:textSize="18sp"
            android:text="@string/mark"/>

        <TextView
            android:id="@+id/tv_value_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_assessment_name"
            android:layout_marginStart="68dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/tv_value"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_mark_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_value_input"
            android:layout_alignParentStart="@+id/tv_value_input"
            android:layout_marginStart="73dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/tv_assessment_mark"
            android:textColor="#000000"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/btn_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="20dp"
            card_view:srcCompat="@drawable/ic_delete_black_24dp"
            android:backgroundTint="#00BCD4"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>