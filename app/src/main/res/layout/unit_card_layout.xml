<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardBackgroundColor="#E3E4E4"
    card_view:cardCornerRadius="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp" >

        <TextView
            android:id="@+id/et_unit_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_credit_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_below="@+id/et_unit_code"
            android:layout_alignParentStart="true"
            android:text="@string/credit_points"/>

        <TextView
            android:id="@+id/tv_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_credit_points"
            android:layout_alignParentStart="true"
            android:textColor="#000000"
            android:textSize="18sp"
            android:text="@string/mark"/>

        <TextView
            android:id="@+id/et_credit_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_unit_code"
            android:layout_marginStart="45dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@+id/tv_credit_points"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/et_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_credit_points"
            android:layout_alignParentStart="@+id/et_credit_points"
            android:layout_marginStart="107dp"
            android:layout_marginTop="1dp"
            android:layout_toEndOf="@+id/tv_mark"
            android:textColor="#000000"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/btn_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="20dp"
            card_view:srcCompat="@drawable/ic_delete_black_24dp"
            android:backgroundTint="#E3E4E4"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>